<body>
    <header>
        <div id="name">
            <h3><a href="/">the <span> garden </span> of eat'n</a></h3>
        </div>
        <nav id="navbar">
            <ul>
                <li><a href="/">home</a></li>
                <li><a href="/about-us">about us</a></li>
                <li><a href="/book-table">book a table</a></li>
                <li><a href="/contact-us">contact us</a></li>
                <li><a href="/join-us">join us</a></li>

                <% if (user) { %>
                    <li class="cart"><a href=""><i class="fa-solid fa-cart-shopping"></i></a></li>

                    <li class="dropdown">
                        <figure>
                            <img id="profileImg" class="profileImg" src="<% if (user.profileImg ) { %>
                                <%= user.profileImg %>  
                            <% } else { %> Icons/username-icon.png <% } %> " id="chosen-image">
                        </figure>

                        <div class="dropdown-content display-none">
                            <a href="/profile">edit profile</a>
                            <a href="">your orders</a>
                            <a href="">membership</a>
                            <a href="">services</a>
                            <a href="">settings</a>
                            <form action="/logout" method="post">
                                <button>
                                    <i class="fa-solid fa-right-from-bracket"></i>
                                    logout
                                </button>
                            </form>
                        </div>
                    </li>

                    <% } else { %>
                        <li><a href="/login">login</a></li>
                        <li class="signup"><a href="/signup">sign up</a></li>
                        <%}%>
            </ul>
        </nav>
    </header>

    <section class="contactus">
        <div class="left">
            <form action="/contactus" method="post">
                <h3>get in touch</h3>
                <input type="text" name="name" placeholder="Full Name" autocomplete="off">

                <input type="email" name="email" placeholder="Email ID" autocomplete="off">

                <textarea name="message" placeholder="Type your Message..."></textarea>

                <button>Send</button>
            </form>
        </div>

        <div class="right">
            <h3>Contact us</h3>
            <h4><i class="fa-solid fa-location-dot"></i>Address</h4>
            <p>The Garden of Eat'n</p>
            <p>Co-operative Society Ltd: No. 2406</p>
            <p>786, MP Nagar, Bhopal, India-495677.</p>
            <p class="phone"><i class="fa-solid fa-phone"></i>+91 489 636 8989</p>
            <p class="email"><i class="fa-solid fa-at"></i>Thegardenofeat'n@gmail.com</p>

            <h4 class="links"><i class="fa-solid fa-link"></i>connect with us</h4>
            <div class="social-links">

                <a href="https://www.instagram.com/_genial.abhi_/" target="_blank"><abbr title="instagram"><i
                            class="fa-brands fa-instagram"></i></abbr></a>

                <a href="https://www.linkedin.com/in/abhishek-kumar-mishra-99b356248/" target="_blank"><abbr                   title="linkedin"><i class="fa-brands fa-linkedin"></i></abbr></a>

            </div>
        </div>
